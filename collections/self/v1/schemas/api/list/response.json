{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sourcemeta One List API Response",
  "description": "The response format for the directory listing API endpoint",
  "examples": [
    {
      "health": 100,
      "entries": [],
      "path": "/schemas",
      "url": "https://example.com/schemas",
      "breadcrumb": [
        {
          "name": "Home",
          "path": "/"
        }
      ]
    }
  ],
  "type": "object",
  "required": [ "health", "entries", "path", "url", "breadcrumb" ],
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "breadcrumb": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [ "name", "path" ],
        "properties": {
          "name": {
            "type": "string"
          },
          "path": {
            "$ref": "../../common/uri-relative.json"
          }
        },
        "additionalProperties": false
      }
    },
    "email": {
      "$ref": "../../common/address.json"
    },
    "entries": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "required": [ "health", "name", "type", "path" ],
            "properties": {
              "title": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "type": {
                "const": "directory"
              },
              "email": {
                "$ref": "../../common/address.json"
              },
              "github": {
                "type": "string"
              },
              "health": {
                "type": "integer",
                "maximum": 100,
                "minimum": 0
              },
              "name": {
                "type": "string"
              },
              "path": {
                "$ref": "../../common/uri-relative.json"
              },
              "website": {
                "$ref": "../../common/url.json"
              }
            },
            "additionalProperties": false
          },
          {
            "$ref": "../schemas/metadata/response.json#base",
            "required": [ "type", "name" ],
            "properties": {
              "type": {
                "const": "schema"
              },
              "name": {
                "type": "string"
              }
            },
            "unevaluatedProperties": false
          }
        ]
      }
    },
    "github": {
      "type": "string"
    },
    "health": {
      "type": "integer",
      "maximum": 100,
      "minimum": 0
    },
    "path": {
      "$ref": "../../common/uri-relative.json"
    },
    "url": {
      "$ref": "../../common/url.json"
    },
    "website": {
      "$ref": "../../common/url.json"
    }
  },
  "additionalProperties": false
}
