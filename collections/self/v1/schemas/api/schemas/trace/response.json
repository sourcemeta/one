{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sourcemeta One Schema Trace API Response",
  "description": "The response format for the schema trace API endpoint",
  "examples": [
    {
      "valid": true,
      "steps": []
    }
  ],
  "type": "object",
  "required": [ "valid", "steps" ],
  "properties": {
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "annotation",
          "evaluatePath",
          "instanceLocation",
          "instancePositions",
          "message",
          "keywordLocation",
          "name",
          "type",
          "vocabulary"
        ],
        "properties": {
          "type": {
            "enum": [ "push", "pass", "fail" ]
          },
          "annotation": true,
          "evaluatePath": {
            "$ref": "https://schemas.sourcemeta.com/sourcemeta/std/v0/ietf/jsonpointer/pointer"
          },
          "instanceLocation": {
            "$ref": "https://schemas.sourcemeta.com/sourcemeta/std/v0/ietf/jsonpointer/pointer"
          },
          "instancePositions": {
            "type": "array",
            "maxItems": 4,
            "minItems": 4,
            "items": {
              "type": "integer",
              "minimum": 1
            }
          },
          "keywordLocation": {
            "$ref": "https://schemas.sourcemeta.com/sourcemeta/std/v0/ietf/uri/url"
          },
          "message": {
            "type": [ "string", "null" ]
          },
          "name": {
            "type": "string"
          },
          "vocabulary": {
            "anyOf": [
              {
                "type": "null"
              },
              {
                "$ref": "https://schemas.sourcemeta.com/sourcemeta/std/v0/ietf/uri/uri"
              }
            ]
          }
        },
        "additionalProperties": false
      }
    },
    "valid": {
      "type": "boolean"
    }
  },
  "additionalProperties": false
}
