{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sourcemeta One Schema Health API Response",
  "description": "The response format for the schema health API endpoint",
  "examples": [
    {
      "score": 100,
      "errors": []
    },
    {
      "score": 75,
      "errors": [
        {
          "pointers": [ "/properties/name" ],
          "name": "missing-description",
          "message": "Property lacks a description",
          "description": null
        }
      ]
    }
  ],
  "type": "object",
  "required": [ "score", "errors" ],
  "properties": {
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [ "pointers", "name", "message", "description" ],
        "properties": {
          "description": {
            "type": [ "string", "null" ]
          },
          "message": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "pointers": {
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "https://schemas.sourcemeta.com/sourcemeta/std/v0/ietf/jsonpointer/pointer"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "score": {
      "type": "integer",
      "maximum": 100,
      "minimum": 0
    }
  },
  "additionalProperties": false
}
