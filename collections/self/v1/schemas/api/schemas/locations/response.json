{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sourcemeta One Schema Locations API Response",
  "description": "The response format for the schema frame locations API endpoint",
  "examples": [
    {
      "static": {},
      "dynamic": {}
    }
  ],
  "type": "object",
  "required": [ "static", "dynamic" ],
  "properties": {
    "dynamic": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/entry"
      }
    },
    "static": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/entry"
      }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "entry": {
      "type": "object",
      "required": [
        "parent",
        "type",
        "root",
        "base",
        "pointer",
        "position",
        "relativePointer",
        "dialect",
        "baseDialect",
        "propertyName",
        "orphan"
      ],
      "properties": {
        "type": {
          "enum": [ "resource", "anchor", "pointer", "subschema" ]
        },
        "base": {
          "$ref": "../../../common/url.json"
        },
        "baseDialect": {
          "$ref": "../../../common/uri.json"
        },
        "dialect": {
          "$ref": "../../../common/url.json"
        },
        "parent": {
          "anyOf": [
            {
              "type": "null"
            },
            {
              "$ref": "../../../common/pointer.json"
            }
          ]
        },
        "pointer": {
          "$ref": "../../../common/pointer.json"
        },
        "position": {
          "$ref": "../position.json"
        },
        "relativePointer": {
          "$ref": "../../../common/pointer.json"
        },
        "root": {
          "$ref": "../../../common/url.json"
        },
        "propertyName": {
          "type": "boolean"
        },
        "orphan": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  }
}
