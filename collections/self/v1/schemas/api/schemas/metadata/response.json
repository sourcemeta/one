{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sourcemeta One Schema Metadata API Response",
  "description": "The response format for the schema metadata API endpoint",
  "examples": [
    {
      "bytes": 512,
      "identifier": "https://example.com/schemas/user.json",
      "path": "/schemas/user.json",
      "baseDialect": "https://json-schema.org/draft/2020-12/schema",
      "dialect": "https://json-schema.org/draft/2020-12/schema",
      "provenance": null,
      "health": 100,
      "breadcrumb": [
        {
          "name": "Home",
          "path": "/"
        }
      ],
      "examples": []
    }
  ],
  "$ref": "#base",
  "required": [ "breadcrumb", "examples" ],
  "properties": {
    "examples": {
      "type": "array",
      "maxItems": 10
    },
    "breadcrumb": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [ "name", "path" ],
        "properties": {
          "name": {
            "type": "string"
          },
          "path": {
            "$ref": "https://schemas.sourcemeta.com/sourcemeta/std/v0/ietf/uri/uri-relative"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "unevaluatedProperties": false,
  "$defs": {
    "base": {
      "$anchor": "base",
      "type": "object",
      "required": [
        "bytes",
        "identifier",
        "path",
        "baseDialect",
        "dialect",
        "provenance",
        "health"
      ],
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "dependencies": {
          "type": "integer",
          "minimum": 0
        },
        "alert": {
          "type": [ "string", "null" ]
        },
        "baseDialect": {
          "$ref": "https://schemas.sourcemeta.com/sourcemeta/std/v0/ietf/uri/uri"
        },
        "bytes": {
          "$ref": "https://schemas.sourcemeta.com/sourcemeta/std/v0/iso/it/2015/byte"
        },
        "dialect": {
          "$ref": "https://schemas.sourcemeta.com/sourcemeta/std/v0/ietf/uri/uri"
        },
        "health": {
          "$ref": "https://schemas.sourcemeta.com/sourcemeta/std/v0/iso/units/2022/percentage"
        },
        "identifier": {
          "$ref": "https://schemas.sourcemeta.com/sourcemeta/std/v0/ietf/uri/url"
        },
        "path": {
          "$ref": "https://schemas.sourcemeta.com/sourcemeta/std/v0/ietf/uri/uri-relative"
        },
        "provenance": {
          "type": [ "string", "null" ]
        }
      }
    }
  }
}
