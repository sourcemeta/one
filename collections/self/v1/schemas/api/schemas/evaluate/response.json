{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sourcemeta One Schema Evaluate API Response",
  "description": "The response format for the schema evaluation API endpoint",
  "examples": [
    {
      "valid": true
    },
    {
      "valid": false,
      "errors": [
        {
          "absoluteKeywordLocation": "https://example.com/schema.json#/type",
          "error": "Expected string but got integer",
          "instanceLocation": "/name",
          "keywordLocation": "/type"
        }
      ]
    }
  ],
  "anyOf": [
    {
      "type": "object",
      "required": [ "valid" ],
      "properties": {
        "annotations": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "absoluteKeywordLocation",
              "annotation",
              "instanceLocation",
              "keywordLocation"
            ],
            "properties": {
              "absoluteKeywordLocation": {
                "$ref": "https://schemas.sourcemeta.com/sourcemeta/std/v0/ietf/uri/url"
              },
              "annotation": {
                "type": "array",
                "minItems": 1
              },
              "instanceLocation": {
                "$ref": "https://schemas.sourcemeta.com/sourcemeta/std/v0/ietf/jsonpointer/pointer"
              },
              "keywordLocation": {
                "$ref": "https://schemas.sourcemeta.com/sourcemeta/std/v0/ietf/jsonpointer/pointer"
              }
            },
            "additionalProperties": false
          }
        },
        "valid": {
          "const": true
        }
      },
      "additionalProperties": false
    },
    {
      "type": "object",
      "required": [ "valid", "errors" ],
      "properties": {
        "errors": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "absoluteKeywordLocation",
              "error",
              "instanceLocation",
              "keywordLocation"
            ],
            "properties": {
              "absoluteKeywordLocation": {
                "$ref": "https://schemas.sourcemeta.com/sourcemeta/std/v0/ietf/uri/url"
              },
              "error": {
                "type": "string"
              },
              "instanceLocation": {
                "$ref": "https://schemas.sourcemeta.com/sourcemeta/std/v0/ietf/jsonpointer/pointer"
              },
              "keywordLocation": {
                "$ref": "https://schemas.sourcemeta.com/sourcemeta/std/v0/ietf/jsonpointer/pointer"
              }
            },
            "additionalProperties": false
          }
        },
        "valid": {
          "const": false
        }
      },
      "additionalProperties": false
    }
  ]
}
