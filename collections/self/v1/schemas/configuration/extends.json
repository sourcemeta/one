{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sourcemeta One Extends",
  "description": "A utility mechanism for inhering from other configuration files",
  "examples": [
    [ "@sourcemeta/json-schema" ],
    [ "./base-config.json" ]
  ],
  "type": "array",
  "minItems": 1,
  "items": {
    "anyOf": [
      {
        "$ref": "./rpath.json"
      },
      {
        "$ref": "../common/path.json"
      }
    ]
  }
}
