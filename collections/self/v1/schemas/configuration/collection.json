{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sourcemeta One Collection",
  "description": "Represents a set of schemas to be mounted into the One",
  "examples": [
    {
      "title": "My Schema Collection",
      "description": "A collection of JSON Schemas",
      "path": "schemas"
    }
  ],
  "x-lint-exclude": [ "simple_properties_identifiers" ],
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "x-sourcemeta-one:alert": {
      "type": "string"
    },
    "x-sourcemeta-one:evaluate": {
      "type": "boolean"
    },
    "x-sourcemeta-one:path": {
      "$ref": "../common/path.json"
    },
    "x-sourcemeta-one:provenance": {
      "$ref": "./rpath.json"
    },
    "baseUri": {
      "$ref": "../common/uri-reference.json"
    },
    "defaultDialect": {
      "$ref": "../common/uri.json"
    },
    "email": {
      "$ref": "../common/address.json"
    },
    "github": {
      "type": "string"
    },
    "path": {
      "$ref": "../common/path.json"
    },
    "resolve": {
      "type": "object",
      "propertyNames": {
        "$ref": "../common/uri-reference.json"
      },
      "additionalProperties": {
        "$ref": "../common/uri-reference.json"
      }
    },
    "website": {
      "$ref": "../common/url.json"
    },
    "lint": {
      "type": "object",
      "properties": {
        "rules": {
          "type": "array",
          "items": {
            "$ref": "../common/path.json"
          }
        }
      },
      "additionalProperties": false
    },
    "ignore": {
      "type": "array",
      "items": {
        "$ref": "../common/path.json"
      }
    }
  },
  "additionalProperties": false
}
