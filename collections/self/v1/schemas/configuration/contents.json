{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "The Sourcemeta One Contents",
  "description": "An internal utility to represent the tree-structure of the configuration format",
  "examples": [
    {
      "my-schemas": {
        "include": "./schemas"
      }
    }
  ],
  "type": "object",
  "additionalProperties": {
    "anyOf": [
      {
        "type": "object",
        "required": [ "include" ],
        "properties": {
          "include": {
            "$ref": "../common/path.json"
          }
        },
        "additionalProperties": false
      },
      {
        "$ref": "./collection.json"
      },
      {
        "$ref": "./page.json"
      }
    ]
  }
}
